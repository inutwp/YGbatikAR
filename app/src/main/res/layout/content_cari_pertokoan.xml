<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_toko_list"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            app:civ_border_color="@color/Primary_Light_Material_700"
            app:civ_border_width="3dp"
            app:srcCompat="@drawable/ic_006_augmented_reality_2"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.5dp"
            android:orientation="vertical"
            android:padding="3dp">

            <com.inudev.ygbatikar.helper.LatoText
                android:id="@+id/ntoko_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:singleLine="true"
                android:textColor="#263238"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.inudev.ygbatikar.helper.NeoSans
                android:id="@+id/notifikasi_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_notif_buka"
                android:padding="2.5dp"
                android:textColor="@color/navigation_color"
                android:textSize="12sp" />

            <com.inudev.ygbatikar.helper.NeoSans
                android:id="@+id/waktu_operasional_cari_pertokoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

