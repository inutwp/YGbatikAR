<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rL_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_infomarker"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/actionbar_img"
                tools:ignore="RtlSymmetry" />

            <com.inudev.ygbatikar.helper.NeoSans
                android:id="@+id/ntoko_infomarker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@id/image_infomarker"
                android:layout_toRightOf="@id/image_infomarker"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:singleLine="true"
                android:textColor="@color/Primary_Light_Material_900"
                android:textSize="20sp" />

            <com.inudev.ygbatikar.helper.NeoSansLight
                android:id="@+id/alamat_infomarker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ntoko_infomarker"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/image_infomarker"
                android:layout_toRightOf="@id/image_infomarker"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alamat_infomarker"
                android:layout_toEndOf="@id/image_infomarker"
                android:layout_toRightOf="@id/image_infomarker"
                android:background="@color/Primary_Light_Material_700"
                android:orientation="horizontal">

                <com.inudev.ygbatikar.helper.NeoSans
                    android:id="@+id/operasional_infomarker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/icons" />
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>
