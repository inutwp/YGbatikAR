<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_info_ar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/actionbar_img"
            tools:ignore="ContentDescription" />

        <com.inudev.ygbatikar.helper.LatoText
            android:id="@+id/notif_operasional_info_ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image_info_ar"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/image_info_ar"
            android:background="@color/Primary_Light_Flat_Navigation"
            android:gravity="left"
            android:padding="10dp"
            android:text="Buka"
            android:textColor="@color/icons"
            android:textSize="12sp"
            tools:ignore="RtlHardcoded,SmallSp" />

        <com.inudev.ygbatikar.helper.NeoSans
            android:id="@+id/ntoko_ar_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_info_ar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Batik Asia"
            android:textColor="@color/icons"
            android:textSize="20sp"
            tools:ignore="SmallSp" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ntoko_ar_info"
            android:background="@color/Primary_Light_Material_700">

            <com.inudev.ygbatikar.helper.LatoText
                android:id="@+id/waktu_operasional_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/icons"
                android:textSize="11sp"
                tools:ignore="SmallSp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>