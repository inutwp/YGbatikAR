<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Primary_Light_Material">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Primary_Light_Material_700"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/maps_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_001_map_1" />

        <com.inudev.ygbatikar.helper.LatoText
            android:id="@+id/loadMapsStreetView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Menyiapkan Maps dan StreetView"
            android:textColor="@color/icons"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            style="@style/AVLoadingIndicatorView"
            app:indicatorName="BallBeatIndicator"
            />

    </LinearLayout>

</RelativeLayout>