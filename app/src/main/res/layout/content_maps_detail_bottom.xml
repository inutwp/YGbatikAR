<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:behavior_peekHeight="300dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="23dp"
            android:background="@android:color/white"
            android:elevation="5dp"
            android:orientation="vertical"
            tools:targetApi="N">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_horizontal_margin">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_toko_detail"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    app:civ_border_color="@color/Primary_Light_Material_700"
                    app:civ_border_width="3dp"
                    tools:ignore="RtlSymmetry" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    tools:ignore="RtlSymmetry">

                    <com.inudev.ygbatikar.helper.NeoSans
                        android:id="@+id/nama_toko_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:minLines="1"
                        android:singleLine="true"
                        android:text="Hamza Batik (Mirota Batik)"
                        android:textColor="@color/Primary_Light_Material_900"
                        android:textSize="19sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <RatingBar
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.7 (51)" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="19dp"
                        android:paddingLeft="19dp">

                        <com.inudev.ygbatikar.helper.LatoText
                            android:id="@+id/toSingleAR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableEnd="@drawable/ic_006_augmented_reality_2"
                            android:drawableRight="@drawable/ic_006_augmented_reality_2"
                            android:drawablePadding="10dp"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:paddingBottom="@dimen/activity_horizontal_margin"
                            android:textColor="@color/Primary_Light_ProductHunt_Navigation"
                            android:textStyle="bold" />

                        <com.inudev.ygbatikar.helper.LatoText
                            android:id="@+id/refresh_map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableEnd="@drawable/ic_autorenew_black_24dp"
                            android:drawableRight="@drawable/ic_autorenew_black_24dp"
                            android:padding="10dp"
                            tools:ignore="RtlCompat" />

                        <com.inudev.ygbatikar.helper.LatoText
                            android:id="@+id/openMaps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp"
                            android:layout_marginRight="7dp"
                            android:drawableEnd="@drawable/ic_001_map_1"
                            android:drawableRight="@drawable/ic_001_map_1"
                            android:padding="10dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:alpha="0.12"
                        android:background="@android:color/black" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="12dp">

                <com.inudev.ygbatikar.helper.LatoText
                    android:id="@+id/alamat_toko_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_notif_buka"
                    android:drawablePadding="10dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp"
                    android:text="Buka"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.36"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_call_black_24dp"
                    tools:ignore="ContentDescription" />

                <com.inudev.ygbatikar.helper.LatoText
                    android:id="@+id/no_telp_toko_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_call_black_24dp"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:drawablePadding="10dp"
                    android:text="-"
                    android:textColor="@android:color/primary_text_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.36"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_access_time_black_24dp" />

                <com.inudev.ygbatikar.helper.LatoText
                    android:id="@+id/operasional_toko_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:drawablePadding="10dp"
                    android:textColor="@android:color/primary_text_light" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/transparancy_ntoko"
                android:visibility="visible">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RV_image_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <fragment
                    android:id="@+id/google_map_street_view"
                    android:name="com.google.android.gms.maps.StreetViewPanoramaFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="327dp"
                    android:layout_gravity="center" />

            </FrameLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/gmail_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_001_navigation" />

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>